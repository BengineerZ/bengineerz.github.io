<span 
  class={`icon ${className}`} 
  style={`width: ${size}; height: ${size}; display: inline-flex; align-items: center; justify-content: center;`}
  set:html={iconContent}
/>

<style>
  .icon {
    flex-shrink: 0;
  }
  
  .icon :global(svg) {
    width: 100%;
    height: 100%;
    color: inherit;
  }
  
  /* Ensure all SVG elements inherit the current color */
  .icon :global(svg *) {
    fill: currentColor;
    stroke: currentColor;
  }
  
  /* For stroke-only icons like GitHub */
  .icon :global(svg[fill="none"]),
  .icon :global(svg[fill="none"] *) {
    fill: none;
    stroke: currentColor;
  }
</style>
